<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradienta"
    android:font = "@font/thedodam"
    tools:context=".StoreActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border_gray"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:layout_editor_absoluteX="20dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_menu"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/marketkurly"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_list_item"
            android:backgroundTint="#600080"
            android:drawableLeft="@drawable/marketkurly_icon"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thedodam"
            android:text="마켓컬리 바로가기"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_list_item"
            android:backgroundTint="#FDB417"
            android:drawableLeft="@drawable/emart_icon"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thedodam"
            android:text="이마트몰 바로가기"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/coupang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_list_item"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/coupang_icon"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/thedodam"
            android:text="쿠팡 바로가기"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/homeplus"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_list_item"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/homeplus_icon"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/thedodam"
            android:text="홈플러스 바로가기"
            android:textSize="19sp"
            android:textStyle="bold"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>