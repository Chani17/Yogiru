<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradienta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/item_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/image_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:text="냉장고 속"
            android:gravity="center_horizontal"
            android:textSize="45sp"
            android:fontFamily="@font/outline"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/image_logo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="60dp"
            android:text="Yogiru"
            android:textColor="#699CDE"
            android:gravity="center_horizontal"
            android:textSize="55sp"
            android:fontFamily="@font/outline"
            android:contentDescription="@string/app_name" />


        <LinearLayout
            android:id="@+id/signin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- EditText - Email -->
            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/thedodam"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <!-- EditText - Password -->
            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/thedodam"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Button -->
            <Button
                android:id="@+id/email_login_button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#F1F8FF"
                android:fontFamily="@font/thedodam"
                android:text="@string/signin_email"
                android:textColor="@color/black"
                android:theme="@style/ButtonStyle" />

            <Button
                android:id="@+id/twitter_login_button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#F1F8FF"
                android:fontFamily="@font/thedodam"
                android:text="코드 등록"
                android:textColor="@color/black"
                android:theme="@style/ButtonStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:enabled="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    app:srcCompat="@drawable/google_logo2" />

                <ImageButton
                    android:id="@+id/naver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:enabled="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    app:srcCompat="@drawable/naver" />

                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00FFFFFF"
                    android:enabled="false"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    app:srcCompat="@drawable/facebook_logo" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>